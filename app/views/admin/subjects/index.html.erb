<h1>Listing subjects</h1>

<table class="table">
  <thead>
    <tr>
      <th>Subject_ID</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.id %></td>
        <td><%= subject.name %></td>
        <td><%= subject.description %></td>
        <td>
          <%= link_to_if current_user, 'Show', admin_subject_path(subject) %>
        </td>
        <td>
          <%= link_to_if current_user && current_user.admin?, 'Edit',
            edit_admin_subject_path(subject) %>
        </td>
        <td>
          <%= link_to_if current_user && current_user.admin?, 'Destroy',
            admin_subject_path(subject), method: :delete, data: {confirm: 'Are you sure?'} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user && current_user.admin? %>
  <%= link_to 'Add New Subject', new_admin_subject_path %>
<% end %>
