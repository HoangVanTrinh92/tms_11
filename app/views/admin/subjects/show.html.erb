<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @subject.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @subject.description %>
</p>

<div class="col-md-8">
  <% if @subject.tasks.any? %>
    <h3>Tasks (<%= @subject.tasks.count %>)</h3>
    <ol class=tasks>
      <% @subject.tasks.each do |task| %>
        <li>Task : <%= task.name %></li>
      <% end %>
    </ol>
  <% end %>
</div>

<%= link_to 'Back', admin_subjects_path %>
