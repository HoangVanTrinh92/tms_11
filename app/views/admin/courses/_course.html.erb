<tr>
  <th>
    <%= course.id %> &nbsp;
  </th>
  <th>
    <%= link_to course.name, admin_course_path(course) %> &nbsp;
  </th>
  <th>
    <%= course.description %> &nbsp;
  </th>
  <th>
    <%= link_to_if(current_user.admin?, "Show",  admin_course_path(course),
    class: 'btn btn-primary') %>
  </th>
  <th>
    <%= link_to_if(current_user.admin?, "Edit",  edit_admin_course_path(course),
    class: 'btn btn-primary') %>
  </th>
  <th>
    <%= link_to_if(current_user.admin?, "Delete", 
                                    admin_course_path(course), 
                                    class: "btn btn-primary", 
                                    method: :delete, 
                                    data: {confirm: "You sure?"}) %>
  <th>
</tr>