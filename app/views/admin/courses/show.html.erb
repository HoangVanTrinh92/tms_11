<% provide(:title, @course.name) %>

<div class="row">
  <h1>
    Course: <%= @course.name %>
  </h1>

  <h4>Description:<%= @course.description %></h4>
  <h3 class = "red" >Begin at: <%= @course.begin_at.to_date %></h3>
  <h3 class = "red" >End at: <%= @course.end_at.to_date %></h3>

  <b>List Users of Course</b>
    <% @course.users.each do |user|%>
      <li><%= user.name %></li>
    <% end %>
    
  <b>List Subjects of Course</b>
    <% @course.subjects.each do |subject|%>
      <li><%= subject.name %></li>
    <% end %>
</div>

<%= link_to 'Back', admin_courses_path %>
